@model RobotsWantedLeague.Models.Agent

<h3>Ajouter un Agent</h3>

<form hx-post="/agents/addAgent"
      hx-trigger="submit">
    <div class="form-group">
        <label for="Name">Nom de l'agent</label>
        <input type="text" 
               class="form-control" 
               id="Name" 
               name="Name"
               placeholder="John Doe">
    </div>
    <div class="form-group">
        <label for="IdentificationNumber">Numéro d'Identification</label>
        <input type="number" 
               class="form-control" 
               id="IdentificationNumber"
               name="IdentificationNumber"
               placeholder="123456">
    </div>

    <div class="form-group">
        <label for="Region">Région</label>
        <input type="text" 
               class="form-control" 
               id="Region"
               name="Region"
               placeholder="Europe">
    </div>

    <button type="submit" class="btn btn-primary mt-3">Ajouter l'Agent</button>
</form>
